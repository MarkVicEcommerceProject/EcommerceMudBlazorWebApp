@using ECommerceMudblazorWebApp.Components.Admin.Services
@using ECommerceMudblazorWebApp.Models

@inject IDialogService DialogService
@inject ISnackbar Snackbar
@inject IProductService ProductService
@inject NavigationManager NavigationManager

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.DeleteForever" Class="mr-3 mb-n1"/>
            Are you sure you want to delete this product?
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudText Typo="Typo.subtitle1">@ItemName</MudText>
        <MudText Typo="Typo.body2">@ItemDescription</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="ConfirmDelete" Color="Color.Error" Variant="Variant.Filled">Yes, Delete</MudButton>
        <MudButton OnClick="Cancel" Color="Color.Secondary" Variant="Variant.Outlined">Cancel</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] 
    IMudDialogInstance MudDialog { get; set; } = default!;
    [Parameter] public int ItemId { get; set; }
    [Parameter] public string? ItemName { get; set; }
    [Parameter] public string? ItemDescription { get; set; }
    [Parameter] public EventCallback<int> OnConfirmDelete { get; set; }

    private Product? Product;

    protected override async Task OnInitializedAsync()
    {
        Product = await ProductService.GetProductByIdAsync(ItemId);
    }

    private async Task ConfirmDelete()
    {
        await OnConfirmDelete.InvokeAsync(ItemId);
        Snackbar.Add("Server Deleted", Severity.Success);
        MudDialog.Close(DialogResult.Ok(true));
    }

    private void Cancel()
    {
        MudDialog.Cancel();
    }
}
    